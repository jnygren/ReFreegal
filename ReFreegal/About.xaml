<Window x:Class="ReFreegal.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About ReFreegal" Height="450" Width="525">
    <Grid >
        <!--<Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Source="x" />-->
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,10,10,0">
            <TextBlock Text="{Binding Path=AssemblyTitle}" FontSize="20"></TextBlock>
            <TextBlock Text="{Binding Path=AssemblyVersion}" FontSize="16"></TextBlock>
        </StackPanel>
        <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,70,10,10" Background="Bisque" 
                   TextWrapping="Wrap" Text="{Binding Path=AboutText}" />
    </Grid>
</Window>
